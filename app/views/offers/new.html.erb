<div class = "container">

	<h2>Make an offer to <%= @product.seller.username %> </h2>

	<%= form_with model: [@offer, @product], url: user_product_offers_path(user_id: current_user.id, product_id: @product.id), method: 'post', local: true do |form| %>

		<p>
			<h4>Product Name:</h4>
			<h5><%= @product.product_name %></h5>
			<%= hidden_field_tag :product_name, @product.product_name %>
        </p>

		<p>
			<h4>Offer Price:</h4>
			<h5><%= @product.price %></h5>
			<%= hidden_field_tag :price, @product.price %>
		</p>

		<p>
			<%= form.label :remarks %> 
			<br>
			<%= form.text_area :remarks %>
		</p>

		<p>
			<%= form.label :transaction_method %>
			<br>
				<%= form.radio_button :transaction_method, "meet", :checked => true %> Meet up
			<br>
				<%= form.radio_button :transaction_method, "mail" %> Mail it to me
		</p>

		<p>
			<%= form.label :meetup_location %> <br>
			<% if @product.location_1 && @product.location_2 %> 
					<%= form.radio_button :meetup_location, 'location_1', :checked => true %> <%= @product.location_1 %>
					<%= form.radio_button :meetup_location, 'location_2' %> <%= @product.location_2 %>	
			<% else %>
				<%= form.radio_button :meetup_location, 'location_1', :checked => true %> <%= @product.location_1 %>
			<% end %>
		</p>

		<%= hidden_field_tag :approve, false %>

		<p>
			<%= form.submit(value:"Make Offer") %>
		</p>

	<% end %>

	<%= link_to 'Back', user_products_path %>

</div>

