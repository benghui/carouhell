<div class = "container">
	<h2>Make an offer to <%= @product.seller.username %> </h2>
	<%= form_with model: @offer, url: user_product_offers_path(user_id: current_user.id, product_id: @product.id), method: 'post', local: true do |form| %>

		<p>
			<h5>Product Name:</h5>
			<h6><%= @product.product_name %></h6>
        </p>

		<p>
			<h5>Offer Price:</h5>
			<h6><%= number_to_currency(@product.price, delimiter: ", ") %></h6>
		</p>

		<p>
			<%= form.label :remarks %> 
			<br>
			<%= form.text_area :remarks %>
		</p>

		<p>
			<%= form.label :transaction_method %>
			<br>
				<%= form.radio_button :transaction_method, "meet", :checked => true %> Meet in person
			<br>
				<%= form.radio_button :transaction_method, "mail" %> Mail it to me
		</p>

		<p>
			<%= form.label :meetup_location %>
			<h6><%= @product.address %></h6>
			<%= form.hidden_field :meetup_location, value: @product.address %>
		</p>
			
			<%= form.hidden_field :approve, value: false %>

		<p>
			<%= form.submit(value:"Make Offer") %>
		</p>

	<% end %>

	<%= link_to 'Back', user_products_path %>

</div>