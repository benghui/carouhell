<div class = "container">

	<h2>Edit your product</h2>

	<%= form_with model: @product, url: product_path, local: true do |form| %>

		<p>
			<%= form.label :product_name, "Product Name" %><br>
			<%= form.text_field :product_name %>
		</p>

		<p>
			<%= form.label :price %><br>
			<%= form.text_field :price %>
		</p>

		<p>
			<%= form.label :description %><br>
			<%= form.text_area :description %>
		</p>

		<p>
			<%= form.label :image_url, "Image URL" %><br>
			<%= form.text_field :image_url  %>
		</p>

		<p>
			<%= form.label "Category" %><br>
			<%= form.collection_select :category_id, @categories, :id, :product_category, prompt: true%>
		</p>

		<p>
			<%= form.submit %>
		</p>
	<% end %>

	<%= link_to 'Back', user_products_path %>

</div>